@charset "utf-8";
@import "normalize";

body {
  text-align: center;
  font-family: "Avenir Roman", "Trebuchet MS", Arial, sans-serif;
  font-size: 1em;
  background-color: #E9D1BD;
}

h1 {
  font-family: "Avenir Light", "Trebuchet MS", Arial, sans-serif;
  color: #2A572D;
  margin: 0;
}

a {
  text-decoration: none;
  color: inherit;
}   

a:visited {
  color: inherit;
}

p {
  font-family: "Avenir Light", "Trebuchet MS", Arial, sans-serif;
  color: #2A572D;
}

div#header {
  width: 100%;
  height: 92vh;
  overflow: auto;
  background-image: url("../images/early-spring2016-02.jpg");
}

div#menubar {
  position: fixed;
  width: 100%;
  height: 100px;
  overflow: auto;

  color: #4B9950;
  text-align: left;
  z-index: 2;

  background: black; /* For browsers that do not support gradients */
  background: -webkit-linear-gradient(rgba(0,0,0,.85) 70%, rgba(0,0,0,.7) 80%, rgba(0,0,0,0) 100%); /* For Safari 5.1 to 6.0 */
  background: -o-linear-gradient(rgba(0,0,0,.85) 70%, rgba(0,0,0,.7) 80%, rgba(0,0,0,0) 100%); /* For Opera 11.1 to 12.0 */
  background: -moz-linear-gradient(rgba(0,0,0,.85) 70%, rgba(0,0,0,.7) 80%, rgba(0,0,0,0) 100%); /* For Firefox 3.6 to 15 */
  background: linear-gradient(rgba(0,0,0,.85) 70%, rgba(0,0,0,.7) 80%, rgba(0,0,0,0) 100%); /* Standard syntax */
}

div#menubar p {
  position: relative;
  top: 25px;
  color: #FF7700;
  font-weight: bold;
  padding-left: 40px;
  padding-right: 20px;
  display: inline;
}

/*Rotating menu boxes credit to David Walsh: https://davidwalsh.name/3d-menu*/

a.rotates {
  padding: 10px 10px;
  perspective: 200px;
  transition: all .07s linear;
  position: relative;
  top: 20px;

  text-align: center;
}

.rotates-sides {
  transition: all .3s ease-out;
  transform: translatez(-25px);
  transform-style: preserve-3d;
  pointer-events: none;
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 100%;
}

.rotates:hover .rotates-sides, .rotates:focus .rotates-sides {
  transform: translateZ(-25px) rotateX(90deg);
}

.front {
  transform: rotatex(0deg) translatez(25px);
}

.back {
  transform: rotatex(-90deg) translatez(25px);
}

.front, .back {
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding: 15px 10px;
  pointer-events: none;
  box-sizing: border-box;
}

div#static-container-div {
  width: 100%;
  text-align: center;
}

div#static-div {
  width: <%= config[:GALLERY_WIDTH] %>px;
  display: inline-block;
  margin-top: 20px;
  text-align: left;
}

div#gallery-container-div {
width: 100%;
overflow: auto;
background-color: #E9D1BD;
}

div#gallery {
  width: <%= config[:GALLERY_WIDTH] %>px;
  position: relative;
  left: 50%;
  margin-left: -<%= config[:GALLERY_WIDTH] / 2 %>px;
}

#gallery-overlay-div {
  position: fixed;
  top: 0px;
  width: 100%;
  height: 100%;
  z-index: -1;
  background-color: transparent;
}

div.gallery-row img {
  margin-top: <%= config[:IMAGE_MARGINS] %>px;
}

div.gallery-row:first-child img {
  margin-top: 0px;
}

div.gallery-row img {
  cursor: pointer;
  display: block;
  float: left;
  margin-right: <%= config[:IMAGE_MARGINS] %>px;
}

div.gallery-row img:last-child {
  margin-right: 0px;
}

@keyframes overlay-fadein {
  from {background-color: transparent;}
  to {background-color: rgba(0,0,0,.9);}
}
@keyframes overlay-fadeout {
  from {background-color: rgba(0, 0, 0, 0.9);}
  to {background-color: transparent;}
}

@-webkit-keyframes welcome {
  from {
    -webkit-transform: scale(0);
    opacity: 0;
  }
  50% {
   -webkit-transform: scale(0);
   opacity: 0;
  }
  82.5% {
    -webkit-transform: scale(1.03);
    -webkit-animation-timing-function: ease-out;
    opacity: 1;
  }
  to {
    -webkit-transform: scale(1);
  }
}
